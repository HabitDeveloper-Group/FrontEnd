/* pages/manage/manage.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(
    0deg,
    rgba(161,140,209,0.2) 0%,
    rgba(251,194,235,0.2) 100%
  );
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.container {
  padding: 20rpx;
}


.habits-list {
  width: 100%;
  border-radius: 20rpx;
  background: #fafafa;
  box-shadow: 0px 0px 10px -20px rgba(0, 0, 0, 0.05);
  margin-top: 30rpx;
  padding: 30rpx;
}

.habit-item {
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 60rpx;
}

.habit-item:not(:last-child){
  border-bottom: 1rpx solid rgba(232, 224, 235, 0.5);
}

.attribute {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 250rpx;
}



.operator {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 280rpx;
}

.operator button {
  height: 60rpx;
  width: 130rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border-radius: 10rpx;
}
.habit-modify button{
  background: linear-gradient(
    90deg,
    rgba(193, 239, 245, 0.9) 0%,
    rgba(10, 232, 240, 1) 2%,
    rgba(136, 242, 223, 1) 100%
  );
  
}

.habit-delete button{
  background: #e065e0;
  color: #ffffff
}

.habit-name {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333333;
}

.habit-name image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 32rpx;
}

.habit-days {
  font-size: 32rpx;
  color: #e065e0;
}

.addHabits {
  width:100%;
  height: 100rpx;
  background: #aec6f8;
  font-size: 30rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  color:#fff
}

.addHabits image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}







