/* pages/manage/manage.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(
    0deg,
    rgba(161,140,209,0.2) 0%,
    rgba(251,194,235,0.2) 100%
  );
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.container {
  padding: 20rpx;
}


.habits-list {
  width: 100%;
  border-radius: 20rpx;
  background: linear-gradient(
    0deg,
    rgba(161,140,209,0.2) 0%,
    rgba(251,194,235,0.2) 100%
  );
  box-shadow: 0px 0px 10px -20px rgba(0, 0, 0, 0.05);
  margin-top: 30rpx;
  padding: 30rpx;
}

.habit-item {
  padding-top: 45rpx;
  padding-bottom: 45rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 60rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}



.attribute {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width:100%
}
.cssofFinishDays {
  display: flex;
  flex-direction:column;
  align-items: center;
  justify-content: space-evenly;
  height: 100rpx;
}

.first {
  font-size: 20rpx;
  
}
.habit-finishedDays {
  font-size: 40rpx;
}

.operator {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 280rpx;
}

.operator button {
  height: 60rpx;
  width: 130rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border-radius: 10rpx;
}
.habit-modify button{
  background: rgba(136, 242, 223, 1);
  
  margin-right: 10rpx;
}

.habit-delete button{
  background: #e065e0;
  color: #ffffff;
  margin-left: 10rpx;
}

.habit-name {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333333;
}

.habit-name image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 32rpx;
}

.habit-description {
  font-size: 29rpx;
  color: #e065e0;
}

.addHabits {
  width:100%;
  height: 100rpx;
  background: #aec6f8;
  font-size: 30rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  color:#fff
}

.addHabits image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}







