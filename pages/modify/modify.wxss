/*横向导航*/

.swiper-nav{
  

  background-color: #fff;
  white-space: nowrap;
  -webkit-tap-highlight-color:rgba(0,0,0,0);
}


.swiper-nav .item-nav{
  display: inline-block;
  padding: 30rpx 32rpx;
  width: 120rpx;
  height: 120rpx;
  cursor: pointer;
}

.swiper-nav .active{
  color: #f43838
}

.swiper-nav .active::after{
  content:'';
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  height:0;
  border-bottom: 4rpx solid #f43838;
  border-radius: 4rpx;bottom: 18rpx
}


