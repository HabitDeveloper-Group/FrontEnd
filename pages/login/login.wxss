page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.login {
  padding: 30rpx;
}
.login button {
  width: 100%;
  border-radius: 60rpx;
  background: linear-gradient(
    90deg,
    rgba(193, 239, 245, 0.9) 0%,
    rgba(10, 232, 240, 1) 2%,
    rgba(136, 242, 223, 1) 100%
  );
  box-shadow: 0rpx 0rpx 12rpx 0rpx rgba(0, 0, 0, 0.1);
  color: #fff;
  height: 96rpx;
  margin-top: 96rpx;
}
.header {
  display: flex;
  justify-content: center;
  margin-top: 106rpx;
  margin-bottom: 96rpx;
}
.header image {
  width: 288rpx;
  height: 176rpx;
}
.form-item{
  height: 98rpx;
  border-radius: 60rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(232, 232, 232, 0.86);
  box-shadow: 0rpx 0rpx 2rpx -4rpx rgba(0, 0, 0, 1);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 48rpx;
}
.form-item image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 32rpx;
}
