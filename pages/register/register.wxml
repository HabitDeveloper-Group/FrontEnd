<!--pages/register/register.wxml-->
<navigation-bar title="注册" back="{{false}}" color="black" background="#FFF"></navigation-bar>
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
  <view class="header">
    <image src="/asset/image/background.jpg" mode="aspectFill"></image>
  </view>
    <view class="register" >
      <view class="form-item">
        <image src="/asset/image/icon_user.png" mode="aspectFill" ></image>
        <input type="text" model:value="{{username}}"  placeholder="请输入用户名" bindblur="check_username"/>
      </view>
      <view class="form-item">
        <image src="/asset/image/icon_smile.png" mode="aspectFill" ></image>
        <input type="text" model:value="{{name}}"  placeholder="请输入昵称" />
      </view>
      <view class="form-item">
        <image src="/asset/image/icon_password.png" mode="aspectFill" ></image>
        <input type="password" model:value="{{password}}"  placeholder="请输入密码" />
      </view>
      <view class="form-item">
        <image src="/asset/image/icon_password.png" mode="aspectFill" ></image>
        <input type="password" model:value="{{password_again}}"  placeholder="请确认你的密码" />
      </view>
        <button bindtap="register" >注册</button>
    </view>
  </view>
</scroll-view>